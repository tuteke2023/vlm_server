    "gst_rate": 0.1,
    "calculation_note": "GST amount = Total amount รท 11 (for GST-inclusive prices)",
    "rules": [
      {
        "rule": "Income transactions (credits) that are for goods/services include GST that must be paid to ATO",
        "example": "Client payment of $1100 includes $100 GST to be paid to ATO"
      },
      {
        "rule": "Expense transactions (debits) for business purchases include GST that can be claimed back",
        "example": "Office supplies $110 includes $10 GST that can be claimed"
      },
      {
        "rule": "Wages, salaries, and payroll are GST-free (no GST applicable)",
        "example": "Payroll deposit is GST-free"
      },
      {
        "rule": "Basic food, medical services, education are GST-free",
        "example": "Fresh groceries from supermarket are mostly GST-free"
      },
      {
        "rule": "Financial supplies like bank fees are input-taxed (no GST claimable)",
        "example": "Bank account fees cannot claim GST"
      }
    ]
  },
